
<div class="post-list">
  <% @posts.each do |post| %>
    <%= link_to post_path(post), class: "post-link" do %>

      <div class="post-box">
        <h2><%= post.title %></h2>

        <% if post.images.attached? %>
          <%= image_tag post.images.first, class: "post-image" %>
        <% end %>

        <p><%= post.body.truncate(60) %></p>
      </div>

    <% end %>
  <% end %>
</div>

<%= paginate @posts %>

<div class="btn-box">
  <%= link_to "＋ 新規作成", new_post_path, class: "new-post-btn" %>
</div>