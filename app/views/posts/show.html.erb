<div class="post-show">

  <h1><%= @post.title %></h1>

  <div class="post-meta">
    <p>📅 <%= @post.date %></p>
    <p>🏷 <%= @post.category %></p>
    <p>⭐ 満足度：<%= @post.rating %> / 5</p>
  </div>

  <% if @post.images.attached? %>
    <div class="main-image">
      <%= image_tag @post.images.first, class: "main-post-image" %>
    </div>

    <% if @post.images.count > 1 %>
      <div class="sub-images">
        <% @post.images.drop(1).each do |image| %>
          <%= image_tag image, class: "sub-post-image" %>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <div class="post-body">
    <h3>使用したもの・メモ</h3>
    <p><%= simple_format(@post.body) %></p>
  </div>

  <div class="post-actions">
    <%= link_to "編集", edit_post_path(@post) %>
    <%= link_to "削除", post_path(@post),
          data: { turbo_method: :delete, turbo_confirm: "削除する？" } %>
    <%= link_to "戻る", root_path %>
  </div>

</div>